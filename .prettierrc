{
  "arrowParens": "avoid",
  "printWidth": 100,
  "singleQuote": true,
  "quoteProps": "as-needed",
  "trailingComma": "all",
  "useTabs": false,
  "semi": false,
  "bracketSpacing": true,
  "bracketSameLine": false,
  "tabWidth": 2,
  "htmlWhitespaceSensitivity": "ignore",
  "overrides": [
    {
      "files": "**/*.md",
      "options": {
        "tabWidth": 2,
        "proseWrap": "never"
      }
    },
    {
      "files": "**/*.css",
      "options": {
        "singleQuote": false
      }
    }
  ],
  "plugins": ["prettier-plugin-package"]
}
