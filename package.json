{
  "name": "base-components",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "browserslist": [
    "defaults",
    "not IE 11"
  ],
  "scripts": {
    "build": "tsc && vite build",
    "dev": "vite",
    "fix:css": "stylelint '(src|pages)/**/*.css' --cache --fix",
    "fix:js": "eslint --cache src pages --ext .js,.ts,.mjs --fix",
    "lint": "pnpm lint:docs && pnpm --no-bail lint:json && pnpm lint:package && pnpm lint:js && pnpm lint:css",
    "lint:css": "stylelint '(src|pages)/**/*.css' --cache",
    "lint:docs": "prettier --write **/README.md **/CHANGELOG.md",
    "lint:js": "eslint --cache src pages --ext .js,.ts,.mjs",
    "lint:json": "prettier --write **/tsconfig.json tsconfig.*.json",
    "lint:package": "prettier --write package.json",
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky",
    "prettier": "prettier --write .",
    "prettier:check": "prettier --check .",
    "preview": "vite preview",
    "security": "pnpm audit --audit-level=high"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@highlightjs/cdn-assets": "^11.10.0",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.14.1",
    "@ui-doc/html-renderer": "^0.1.1",
    "@ui-doc/vite": "^0.1.1",
    "autoprefixer": "^10.4.19",
    "cssnano": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-simple-import-sort": "^12.1.0",
    "glob": "^10.4.2",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "postcss": "^8.4.38",
    "postcss-extend": "^1.0.5",
    "postcss-import": "^16.1.0",
    "postcss-nested": "^6.0.1",
    "prettier": "^3.3.2",
    "prettier-plugin-package": "^1.4.0",
    "stylelint": "^16.6.1",
    "stylelint-config-clean-order": "^6.0.0",
    "stylelint-config-standard": "^36.0.1",
    "stylelint-prettier": "^5.0.0",
    "typescript": "^5.4.5",
    "vite": "^5.3.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --cache --fix"
    ],
    "*.css": [
      "stylelint --fix"
    ],
    "package.json": [
      "prettier --write"
    ],
    "tsconfig(.*).json": [
      "prettier --write"
    ],
    "((README|CHANGELOG)|(**/(README|CHANGELOG))).md": [
      "prettier --write"
    ]
  }
}
